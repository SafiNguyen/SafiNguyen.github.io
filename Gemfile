source "https://rubygems.org"

# Jekyll core (tương thích Ruby 3.4+)
gem "jekyll", "~> 4.3"

# Plugins thường dùng
gem "jekyll-feed", "~> 0.17"
gem "jekyll-seo-tag", "~> 2.8"
gem "jekyll-paginate"

# Markdown parser
gem "kramdown", "~> 2.4"
gem "kramdown-parser-gfm"

# Syntax highlighting
gem "rouge", "~> 4.0"

# Nếu bạn thích theme minima mặc định
# gem "minima", "~> 2.5"

# Windows compatibility (nếu build trên Windows)
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
